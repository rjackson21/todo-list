<h1>"User's" To-Do List </h1>

<%= form_for @todo_new do |form | %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content%><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th scope="col">Todo: </th>
      <th scope= "col">Completed</th>
    </tr>
  </thead>
  <tbody>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.title%></td>
      <td><%= todo.content%></td>
    </tr>
  <% end %>
  </tbody>
</table>





